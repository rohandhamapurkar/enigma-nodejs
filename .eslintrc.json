{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true,
		"jquery": false,
		"jest": true,
		"jasmine": true
	},
	"rules": {
		// enable additional rules
		"quotes": ["error", "double"],

		// override configuration set by extending "eslint:recommended"
		"no-empty": "warn",
		"no-cond-assign": ["error", "always"],
		"no-prototype-builtins": "off",

		// disable rules from base configurations
		"for-direction": "off"
	}
}
